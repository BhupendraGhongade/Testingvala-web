{
  "name": "testingvala-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:local": "supabase db push --local",
    "db:status": "supabase status",
    "db:migrate": "node scripts/safe-migrate.js",
    "db:deploy": "node scripts/deploy-prod.js",
    "db:backup": "node scripts/backup-prod.js",
    "db:backup-simple": "node scripts/simple-backup.js",
    "db:seed": "supabase seed --local",
    "db:diff": "supabase db diff -f",
    "db:deploy-direct": "node scripts/deploy-direct.js",
    "db:deploy-no-backup": "node scripts/deploy-no-backup.js",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:reset": "supabase db reset --local && supabase seed --local",
    "deploy:dev": "node scripts/deploy-environments.js dev",
    "deploy:prod": "node scripts/deploy-environments.js prod",
    "env:check": "node scripts/check-environment.js",
    "setup": "chmod +x supabase-setup.sh && ./supabase-setup.sh",
    "build:prod": "node scripts/production-build.js",
    "security:check": "npm audit --audit-level moderate",
    "security:scan": "grep -r 'eyJ\\|sk_\\|pk_' --include='*.js' --include='*.jsx' src/ || echo 'No hardcoded secrets found'",
    "security:test": "vitest run src/tests/security.test.js",
    "security:validate": "npm run security:scan && npm run security:test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.28.0",
    "lucide-react": "^0.263.1",
    "nodemailer": "^7.0.6",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.30.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supabase": "^1.0.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.20"
  }
}
