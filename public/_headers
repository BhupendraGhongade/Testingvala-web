# Production Security Headers for TestingVala
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://*.supabase.co https://api.zeptomail.in; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  
  # HTTPS Enforcement
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cache Control for Security
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# API Routes - Enhanced Security
/api/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Content-Security-Policy: default-src 'none'
  Cache-Control: no-cache, no-store, must-revalidate
  Access-Control-Allow-Methods: POST, OPTIONS
  Access-Control-Max-Age: 86400

# Static Assets - Optimized Caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Images - Secure Caching
*.jpg
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

*.png
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

*.svg
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Fonts - Long-term Caching
*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *